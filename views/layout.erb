<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <script src="js/jquery.js"></script>
    <script>
    $(function(){
      $('#js, #c, #java').hide();
      $("#code_java").click(function() {
        $('#js, #c, #java').hide();
        $('#java').show();
      });
      $("#code_js").click(function() {
        console.log('js clicked');
        $('#js, #c, #java').hide();
        $('#js').show();
      });
      $("#code_c").click(function() {
        console.log('c clicked');
        $('#js, #c, #java').hide();
        $('#c').show();
      });
    });
    </script>
  </head>
  <body>
    <%= yield %>
  </body>
</html>